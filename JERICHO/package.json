{
  "name": "jericho-system",
  "version": "0.1.0",
  "description": "Jericho closed-loop behavioral execution MVP",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:client\"",
    "dev:api": "STATE_PATH=src/data/state_good.json node src/api/server.js",
    "dev:api:watch": "STATE_PATH=src/data/state_good.json nodemon src/api/server.js",
    "dev:client": "vite dev",
    "build": "npm run lint && npm test && vite build",
    "preview": "vite preview",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check-all": "npm run lint && npm run format:check && npm test",
    "typecheck": "echo 'TypeScript not configured' && exit 0",
    "prepare": "husky install || true"
  },
  "keywords": [
    "jericho",
    "identity",
    "tasks",
    "reinforcement"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.0.4",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "vite": "^5.4.10",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
