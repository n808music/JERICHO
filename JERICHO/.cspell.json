  "ignorePaths": [
    "node_modules/**",
    "dist/**",
    "build/**",
    ".git/**",
    "coverage/**",
    "*.log"
  ],
  "dictionaries": ["en", "en_US", "softwareTerms", "typescript", "node", "npm"],
  "ignoreRegExpList": [
    "/\\b[A-Z]{2,}\\b/g", // Acronyms
    "/\\bhttps?:\\/\\/[^\\s]+\\b/g", // URLs
    "/\\b[a-f0-9]{8}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{12}\\b/gi" // UUIDs
  ],
  "overrides": [
    {
      "filename": "**/*.md",
      "language": "en,en-US"
    },
    {
      "filename": "src/**/*.ts",
      "language": "en,en-US"
    },
    {
      "filename": "src/**/*.tsx",
      "language": "en,en-US"
    }
  ]
}
